<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="e4biblesaver" _label="E4Biblesaver">

<command arg="-root"/>

  <number id="duration" type="spinbutton" arg="-duration %"
          _label="Duration (seconds)"
          low="5" high="60" default="30"/>

  <number id="lineLength" type="spinbutton" arg="-line-length %"
          _label="Line length (number of characters)"
          low="20" high="100" default="60"/>

  <number id="fontSize" type="slider" arg="-font-size %"
          _label="Font size" _low-label="Large" _high-label="Small"
          low="3" high="7" default="5" />

  <file id="bible" _label="Bible file path" arg="-bible %"/>

  <xscreensaver-updater />

  <_description>
E4Biblesaver. Show a random bible verse.

Written by Dorian Soru; 2022.
  </_description>
</screensaver>
